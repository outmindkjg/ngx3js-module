/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "../../tsconfig.json",
  "buildOptimizer": false,
  "optimization": {
    "scripts": false,
    "styles": {
      "minify": false,
      "inlineCritical": false
    },
    "fonts": {
      "inline": true
    }
  },
  "vendorChunk": false,
  "extractLicenses": false,
  "sourceMap": true,
  "namedChunks": false,
  "aot": true,
  "inlineStyleLanguage": "scss",
  "compilerOptions": {
    "outDir": "../../out-tsc/lib",
    "target": "es2015",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": [],
    "paths": {
      "fs": ["./node_modules/fs-web"]
    },
    "lib": [
      "dom",
      "es2018"
    ]
  },
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts"
  ]
}
